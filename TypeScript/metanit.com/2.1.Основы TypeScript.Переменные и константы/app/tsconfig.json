{
    "compilerOptions": {
      "target": "ES5",                       // Компиляция в ES5 для совместимости с старыми браузерами
      "module": "CommonJS",                   // Использование CommonJS для Node.js
      "outDir": "./out",                      // Папка, куда будут выводиться скомпилированные файлы JavaScript
      "sourceMap": true,                      // Генерация карт исходных файлов для отладки
      "strict": true,                         // Включает все строгие проверки
      "esModuleInterop": true,                // Разрешает совместимость с CommonJS
      "skipLibCheck": true,                   // Пропуск проверки типов для библиотек (ускоряет компиляцию)
      "forceConsistentCasingInFileNames": true // Согласованность регистров в названиях файлов
    },
    "include": [
      "src/**/*.ts"                           // Включаем все файлы .ts в папке src
    ],
    "exclude": [
      "node_modules"                          // Исключаем папку node_modules
    ]
  }
  