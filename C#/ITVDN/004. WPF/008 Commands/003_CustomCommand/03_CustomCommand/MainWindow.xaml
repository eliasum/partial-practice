<Window x:Class="_03_CustomCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользовательские команды" Height="350" Width="525" Loaded="Window_Loaded">
    <StackPanel>
        <TextBox Name="TextBox1" Margin="10"></TextBox>
        <Button Name="Button1" Margin="10" CommandParameter="{Binding ElementName=TextBox1, Path=Text}">
            Кнопка</Button>
    </StackPanel>
</Window>
